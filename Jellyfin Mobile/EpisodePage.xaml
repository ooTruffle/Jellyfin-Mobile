<Page
    x:Class="JellyfinMobile.EpisodePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:JellyfinMobile.Controls"
    Background="Black">

    <Grid Margin="32">
        <StackPanel>
            <TextBlock x:Name="EpisodeTitle" FontSize="22" FontWeight="Bold" Margin="0,0,0,10"/>
            <Image x:Name="EpisodeImage" Width="160" Height="160" Margin="0,0,0,10"/>
            <TextBlock x:Name="EpisodeOverview" FontSize="14" Margin="0,0,0,20" TextWrapping="Wrap"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="PlayButton" Content="Play" Click="PlayButton_Click" Margin="0,0,10,0"/>
                <Button Content="Back" Click="BackButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Shared Media Player Control -->
        <controls:MediaPlayerControl x:Name="SharedMediaPlayer" Visibility="Collapsed"/>
    </Grid>
</Page>