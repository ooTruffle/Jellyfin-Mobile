<UserControl
    x:Class="JellyfinMobile.Controls.MediaPlayerControl"
    xmlns="http://schemas.microsoft.com/winrt/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Black">
    <Grid x:Name="RootGrid" Background="Black">
        <MediaElement x:Name="PlayerMediaElement" AutoPlay="False" Width="800" Height="450"/>
        <Button x:Name="ClosePlayerButton" Content="Close" Click="ClosePlayerButton_Click"
                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="16"/>
    </Grid>
</UserControl>
