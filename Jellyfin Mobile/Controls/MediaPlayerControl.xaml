<UserControl
    x:Class="JellyfinMobile.Controls.MediaPlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Black">
    <Grid x:Name="RootGrid" Background="Black">
        <MediaElement x:Name="PlayerMediaElement"
                      AutoPlay="False"
                      AreTransportControlsEnabled="True"
                      Width="800"
                      Height="450"
                      Stretch="Uniform"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="0,40,0,0"/>
        <Button x:Name="ClosePlayerButton"
                Content="Close"
                Click="ClosePlayerButton_Click"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="16"
                Width="60"
                Height="32"
                AutomationProperties.Name="Close Player"/>
    </Grid>
</UserControl>