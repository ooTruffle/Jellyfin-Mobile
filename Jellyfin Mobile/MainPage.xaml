<Page
    x:Class="JellyfinMobile.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:JellyfinMobile.Controls"
    Background="Black">

    <Grid>
        <!-- Login Panel -->
        <StackPanel x:Name="LoginPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible" Width="400">
            <TextBlock Text="Jellyfin Login" FontSize="24" Margin="0,0,0,16" FontWeight="Bold"/>
            <TextBox x:Name="ServerUrlBox" Header="Server URL" Margin="0,0,0,8"/>
            <TextBox x:Name="UsernameBox" Header="Username" Margin="0,0,0,8"/>
            <PasswordBox x:Name="PasswordBox" Header="Password" Margin="0,0,0,8"/>
            <Button Content="Login" Click="LoginButton_Click" Margin="0,8,0,0"/>
            <TextBlock x:Name="StatusBlock" Margin="0,16,0,0"/>
        </StackPanel>

        <!-- Media Browser Panel -->
        <StackPanel x:Name="MediaBrowserPanel" Visibility="Collapsed" Margin="32">
            <TextBlock x:Name="MediaBrowserTitle" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>
            <Button x:Name="BackButton" Content="Back" Click="BackButton_Click" Margin="0,0,0,16" Visibility="Collapsed"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <!-- Libraries -->
                <ListView x:Name="LibraryGridView" Grid.Column="0" ItemClick="LibraryGridView_ItemClick" IsItemClickEnabled="True" Visibility="Visible">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" FontSize="16" Margin="8"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- Media Items -->
                <ListView x:Name="MediaGridView" Grid.Column="1" ItemClick="MediaGridView_ItemClick" IsItemClickEnabled="True" Visibility="Collapsed">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding ImageUrl}" Width="64" Height="64" Margin="0,0,8,0"/>
                                <TextBlock Text="{Binding Name}" FontSize="16" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <!-- Media Details Panel -->
            <Border x:Name="MediaDetailsPanel" Visibility="Collapsed" Margin="0,20,0,0" Padding="20" Background="#222">
                <StackPanel>
                    <TextBlock x:Name="SelectedMediaTitle" FontSize="18" FontWeight="Bold"/>
                    <Button x:Name="PlayButton" Content="Play" Click="PlayButton_Click" Margin="0,12,0,0" Visibility="Collapsed"/>
                    <Pivot x:Name="SeasonPivot" SelectionChanged="SeasonPivot_SelectionChanged" Visibility="Collapsed" Margin="0,12,0,0"/>
                </StackPanel>
            </Border>

            <!-- Episode List -->
            <TextBlock x:Name="EpisodeListTitle" Text="Episodes" FontSize="16" FontWeight="Bold" Margin="0,24,0,8" Visibility="Collapsed"/>
            <ListView x:Name="EpisodeGridView" ItemClick="EpisodeGridView_ItemClick" IsItemClickEnabled="True" Visibility="Collapsed" Margin="0,0,0,8">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding ImageUrl}" Width="48" Height="48" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Name}" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Episode Details Panel -->
            <Border x:Name="EpisodeDetailPanel" Visibility="Collapsed" Margin="0,20,0,0" Padding="20" Background="#222">
                <StackPanel>
                    <!-- Add episode detail fields if needed -->
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Shared Media Player Control -->
        <controls:MediaPlayerControl x:Name="SharedMediaPlayer" Visibility="Collapsed"/>
    </Grid>
</Page>